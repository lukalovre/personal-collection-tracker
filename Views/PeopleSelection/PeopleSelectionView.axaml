<UserControl xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:vm="using:CollectionTracker.ViewModels" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:uc="clr-namespace:CollectionTracker.Views;assembly=CollectionTracker" mc:Ignorable="d" x:DataType="vm:PeopleSelectionViewModel" x:Class="CollectionTracker.Views.PeopleSelectionView" xmlns:view="using:CollectionTracker.Views" x:CompileBindings="True">
	<StackPanel>
		<TextBox Watermark = "People" Width="150" Text="{Binding SearchText}"/>
		<ListBox Width="145" Height="100" ItemsSource="{Binding FilteredItems}" SelectionMode="Multiple">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected}"/>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
	</StackPanel>
</UserControl>
